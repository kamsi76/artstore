<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".preference.SettingActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/settingFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/settingTitle"
                android:layout_above="@+id/bottomDeco"
                android:background="@drawable/ic_splash_background">


            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:orientation="horizontal">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#2ecc71" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#3498db"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#bdc3c7"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f1c40f"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#e67e22"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#9b59b6"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#34495e"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#16a085"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#95a5a6"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#c0392b"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/settingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/preference_title_border"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                >

                <ImageView
                    android:src="@drawable/icon_setting"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:paddingTop="4dp"
                    android:layout_marginRight="10dp"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="설정"
                    android:fontFamily="@font/common_font"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottomDeco"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:orientation="horizontal">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#2ecc71" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#3498db"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#bdc3c7"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f1c40f"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#e67e22"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#9b59b6"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#34495e"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#16a085"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#95a5a6"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#c0392b"
                    android:layout_weight="1"
                    />
            </LinearLayout>

        </RelativeLayout>


    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>